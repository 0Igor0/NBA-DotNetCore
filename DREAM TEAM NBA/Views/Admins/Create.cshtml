@model DREAM_TEAM_NBA.Models.Admin

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/img/main/wallpaperInicial.jpg');">
			<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">

        <form asp-action="Create" class="login100-form validate-form flex-sb flex-w">
            	<span class="login100-form-title p-b-53">
						Entrar
				</span>	
                <div class="p-t-31 p-b-9">
					<span class="txt1">
							Nome
					</span>
				</div>

            <div class="wrap-input100" data-validate = "Password is required">
                <input asp-for="Nome" class="input100" type="search" placeholder="Nome" />
                <span asp-validation-for="Nome" class="focus-input100"></span>

            </div>

                 <div class="p-t-31 p-b-9">
					<span class="txt1">
							Password
					</span>
				</div>

         <div class="wrap-input100" data-validate = "Password is required">
                <input asp-for="Password" class="input100" type="search" placeholder="Password" />
                <span asp-validation-for="Password" class="focus-input100"></span>

            </div>

                <div class="p-t-31 p-b-9">
					<span class="txt1">
							Email
					</span>
				</div>

         <div class="wrap-input100" data-validate = "Password is required">
                <input asp-for="Email" class="input100" type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="focus-input100"></span>

            </div>
            <div class="container-login100-form-btn m-t-17">
                <input type="submit" value="Create" class="login100-form-btn" />
            </div>


            
					<div class="w-full text-center p-t-55">
						<span class="txt2">
							Ja tem conta?
						</span>

						<a href="~/Admin/Login" class="txt2 bo1">
							Login
						</a>
						</div>
        </form>
    </div>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

